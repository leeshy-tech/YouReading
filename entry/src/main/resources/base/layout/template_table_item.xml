<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal">
    <Text
        ohos:id="$+id:text_department"
        ohos:height="match_content"
        ohos:width="110vp"
        ohos:text="馆藏部门"
        ohos:text_alignment="center"
        ohos:text_size="16vp"
        ohos:background_element="#FFFFFFFF"
        />
    <Text
        ohos:id="$+id:text_shelf"
        ohos:height="match_content"
        ohos:width="110vp"
        ohos:text="架位"
        ohos:text_alignment="center"
        ohos:text_size="16vp"
        ohos:background_element="#FFFFFFFF"
        />
    <Text
        ohos:id="$+id:text_state"
        ohos:height="match_content"
        ohos:width="110vp"
        ohos:text="状态"
        ohos:text_alignment="center"
        ohos:text_size="16vp"
        ohos:background_element="#FFFFFFFF"
        />
</DirectionalLayout>