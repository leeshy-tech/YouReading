<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <TextField
            ohos:id="$+id:search_input"
            ohos:height="40vp"
            ohos:width="290vp"
            ohos:hint="搜索"
            ohos:text_size="20fp"
            ohos:top_padding="5vp"
            ohos:left_padding="15vp"
            ohos:background_element="$graphic:background_search_input">
        </TextField>
        <Button
            ohos:id="$+id:search_btn"
            ohos:height="40vp"
            ohos:width="70vp"
            ohos:text="搜索"
            ohos:text_size="20fp"
            ohos:background_element="#FFFADA14"
            />
    </DirectionalLayout>
    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent">
        <TableLayout
            ohos:id="$+id:books_table"
            ohos:height="match_content"
            ohos:width="match_parent">

        </TableLayout>
    </ScrollView>


</DirectionalLayout>