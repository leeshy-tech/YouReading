<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="horizontal_center"
    ohos:padding="5vp">
    <Image
        ohos:height="400vp"
        ohos:width="200vp"
        ohos:image_src="$media:logo"
        ohos:scale_mode="zoom_center"/>
    <TextField
        ohos:id="$+id:login_id_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录帐号"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp">
    </TextField>
    <TextField
        ohos:id="$+id:login_pwd_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录密码"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:text_input_type="pattern_password">
    </TextField>
    <Button
        ohos:id="$+id:login_btn"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="登 录"
        ohos:text_color="#ffffff"
        ohos:text_size="13fp"
        ohos:padding="10vp"
        ohos:background_element="#ff383b"
        ohos:top_margin="15vp"/>
</DirectionalLayout>