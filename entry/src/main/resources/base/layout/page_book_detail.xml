<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:margin="10vp">
        <Image
            ohos:id="$+id:book"
            ohos:height="160vp"
            ohos:width="120vp"
            ohos:image_src="$media:book"
            ohos:scale_mode="clip_center"
            />
        <Text
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:text="数字信号处理"
            ohos:align_top="$id:book"
            ohos:right_of="$id:book"
            ohos:left_margin="10vp"
            />
        <Text
            ohos:id="$+id:author"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="周炯磐 庞沁华等著"
            ohos:align_left="$id:title"
            ohos:below="$id:title"
            ohos:text_size="16vp"
            />
        <Text
            ohos:id="$+id:ISBN"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="ISBN:978-7-03-025415-3"
            ohos:align_left="$id:author"
            ohos:below="$id:author"
            ohos:text_size="16vp"
            />
        <Text
            ohos:id="$+id:press"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="科学出版社"
            ohos:align_left="$id:ISBN"
            ohos:below="$id:ISBN"
            ohos:text_size="16vp"
            />
    </DependentLayout>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="馆藏信息"
        ohos:text_size="20vp"
        ohos:left_margin="10vp"
        />
    <TableLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="110vp"
                ohos:text="馆藏部门"
                ohos:text_alignment="center"
                ohos:text_size="16vp"
                ohos:background_element="$graphic:background_table_item1"
                />
            <Text
                ohos:height="match_content"
                ohos:width="110vp"
                ohos:text="架位"
                ohos:text_alignment="center"
                ohos:text_size="16vp"
                ohos:background_element="$graphic:background_table_item1"
                />
            <Text
                ohos:height="match_content"
                ohos:width="110vp"
                ohos:text="状态"
                ohos:text_alignment="center"
                ohos:text_size="16vp"
                ohos:background_element="$graphic:background_table_item1"
                />
        </DirectionalLayout>
    </TableLayout>
    <TableLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:id="$+id:store_table"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp">

    </TableLayout>


</DirectionalLayout>